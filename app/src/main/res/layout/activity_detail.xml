<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECEFF8"
    tools:context=".Detail_activity">

    <LinearLayout
        android:id="@+id/conatiner1"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:background="@color/blackblue">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="283dp"
            android:layout_height="106dp"
            android:layout_marginTop="49dp"
            android:layout_marginStart="25dp">

            <ImageView
                android:id="@+id/photp_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/photp_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/namedoctor"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="12dp"
                android:gravity="bottom"
                android:text="@string/dr_novikov"
                android:textAppearance="@style/open_sansbold"
                android:textColor="@color/white2"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/photp_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.202" />

            <TextView
                android:id="@+id/profession"
                android:layout_width="158dp"
                android:layout_height="35dp"
                android:gravity="bottom"
                android:text="@string/dentist"
                android:textAppearance="@style/open_sansbold"
                android:textColor="@color/white2"
                android:textSize="25sp"
                app:layout_constraintTop_toBottomOf="@+id/namedoctor"
                app:layout_constraintStart_toStartOf="@+id/namedoctor"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logoholder"
        android:layout_width="215dp"
        android:layout_height="74dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="129dp"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/copanylogo"
            app:layout_constraintStart_toStartOf="@id/logoholder"
            app:layout_constraintTop_toTopOf="@id/logoholder"/>
        <TextView
            android:id="@+id/dental_clin"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:text="@string/dental_clin"
            android:textAppearance="@style/halaney_demo"
            android:textSize="20sp"
            android:gravity="bottom"
            app:layout_constraintBottom_toTopOf="@id/your_friend"
            app:layout_constraintEnd_toEndOf="@id/your_friend"
            />
        <TextView
            android:id="@+id/your_friend"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="58dp"
            android:text="@string/your_friend"
            android:textAppearance="@style/open_sans"
            android:textSize="12sp"
            android:gravity="bottom"
            app:layout_constraintEnd_toEndOf="@id/logoholder"
            app:layout_constraintBottom_toBottomOf="@id/logoholder"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="36dp"
        >

        <LinearLayout
            android:id="@+id/tocall_vidget"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#FFFFFF"
            app:cardCornerRadius="20dp"
            android:padding="5dp"
            android:layout_margin="4dp">

            <ImageView
                android:id="@+id/image_call"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="6dp"
                android:src="@drawable/tocall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/tocall"
                android:textColor="@color/blackblue"
                android:textAppearance="@style/open_sans"
                android:textSize="13sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/whatsapp_vidget"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#FFFFFF"
            app:cardCornerRadius="20dp"
            android:padding="5dp"
            android:layout_margin="4dp">

            <ImageView
                android:id="@+id/image_whatsapp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="6dp"
                android:src="@drawable/whatsappicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/whatsapp"
                android:textColor="@color/blackblue"
                android:textAppearance="@style/open_sans"
                android:textSize="13sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mail_vidget"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#FFFFFF"
            app:cardCornerRadius="20dp"
            android:padding="5dp"
            android:layout_margin="4dp"
            >

            <ImageView
                android:id="@+id/image_mail"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="6dp"
                android:src="@drawable/mailicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/mail"
                android:textColor="@color/blackblue"
                android:textAppearance="@style/open_sans"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/website_vidget"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#FFFFFF"
            app:cardCornerRadius="20dp"
            android:padding="5dp"
            android:layout_margin="4dp">

            <ImageView
                android:id="@+id/image_website"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="6dp"
                android:src="@drawable/webicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/Visitwebsite"
                android:textColor="@color/blackblue"
                android:textAppearance="@style/open_sans"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/telegram_vidget"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#FFFFFF"
            app:cardCornerRadius="20dp"
            android:padding="5dp"
            android:layout_margin="4dp">

            <ImageView
                android:id="@+id/image_telegram"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="6dp"
                android:src="@drawable/telegramicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/telegram"
                android:textColor="@color/blackblue"
                android:textAppearance="@style/open_sans"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/contact_vidget"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#FFFFFF"
            app:cardCornerRadius="20dp"
            android:padding="5dp"
            android:layout_margin="4dp">

            <ImageView
                android:id="@+id/image_contact"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="6dp"
                android:src="@drawable/contacticon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/save_contact"
                android:textColor="@color/blackblue"
                android:textAppearance="@style/open_sans"
                android:textSize="13sp"/>
        </LinearLayout>



    </GridLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/locationholder"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp">
        <TextView
            android:id="@+id/our_locatio"
            android:layout_width="121dp"
            android:layout_height="25dp"
            android:text="@string/our_locatio"
            android:textAppearance="@style/open_sansbold"
            android:textColor="@color/blackblue"
            android:gravity="bottom"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="@id/locationholder"
            app:layout_constraintStart_toStartOf="@id/locationholder"
            />
        <TextView
            android:id="@+id/shopping_ce"
            android:layout_width="197dp"
            android:layout_height="44dp"
            android:text="@string/shopping_ce"
            android:textAppearance="@style/open_sans"
            android:gravity="bottom"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/our_locatio"
            app:layout_constraintStart_toStartOf="@+id/locationholder"
            />
        <TextView
            android:id="@+id/open_map"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/open_map"
            android:gravity="bottom"
            android:textAppearance="@style/open_sansbold"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/shopping_ce"
            app:layout_constraintStart_toStartOf="@+id/locationholder"
            android:textSize="14sp"
            android:textColor="#924883"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>